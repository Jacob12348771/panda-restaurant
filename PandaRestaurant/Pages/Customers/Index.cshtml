@page
@model PandaRestaurant.Pages.Customers.IndexModel

@{
    ViewData["Title"] = "Customers";
}

<h1>Customers</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<div id="table" class="row">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">
                    <a asp-page="./Index" asp-route-sortOrder="@Model.NameSort">
                        @Html.DisplayNameFor(model => model.Customer[0].CustomerName)
                    </a>
                </th>
                <th scope="col">
                    <a asp-page="./Index" asp-route-sortOrder="@Model.OrderSort">
                    @Html.DisplayNameFor(model => model.Customer[0].Orders.Count)
                </a>
                </th>
                <th scope="col">Edit Customer</th>
                <th scope="col">Remove Customer</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Customer)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerName)
                    </td>
                    <td scope="row">
                        @{
                            List<int> activeOrders = new List<int>();
                        }
                        @foreach (var order in item.Orders)
                        {
                            if (order.OrderStatus.ToString() != "Paid")
                            {
                                activeOrders.Add(order.OrderID);
                            }
                        }
                        @Html.DisplayFor(modelItem => activeOrders.Count)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.CustomerID">Edit</a>
                    </td>
                    <td>
                        <a asp-page="./Delete" asp-route-id="@item.CustomerID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
