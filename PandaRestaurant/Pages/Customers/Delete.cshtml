@page
@model PandaRestaurant.Pages.Customers.DeleteModel

@{
    ViewData["Title"] = "Delete Customer";
}

<h1 class="page-title">Delete Customer</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.LabelFor(model => model.Customer.CustomerName, "Customer Name")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.CustomerName)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Customer.CustomerID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index" class="btn btn-outline-dark">Back to List</a>
    </form>
</div>
