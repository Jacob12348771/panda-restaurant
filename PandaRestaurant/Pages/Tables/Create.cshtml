@page
@model PandaRestaurant.Pages.Tables.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="page-title content">Add a new table available in your restaurant</h1>

<div class="row">
    <div class="col-md-4 offset-4">
        <form method="post" class="form-submit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input table-input" asp-for="Table.TableOccupied" /> @Html.DisplayNameFor(model => model.Table.TableOccupied)
                </label>
            </div>
           <div class="form-group row action-form">
                <div class="col-md-6 submit-button">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
                <div class="col-md-6 back-link">
                    <a asp-page="Index">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
