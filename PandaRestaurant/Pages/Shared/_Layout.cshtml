<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PandaRestaurant</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PandaRestaurant.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="container-fluid">
            <div class="row flex-nowrap">
                <div class="col-auto px-0">
                    <div id="sidebar" class="collapse collapse-horizontal show border-end position-fixed">
                        <div id="sidebar-nav" class="sidebar-nav list-group border-0 rounded-0 text-sm-start min-vh-100">
                            <a class="list-group-item border-end-0 d-inline-block text-truncate" asp-area="" asp-page="/Index">
                                <img class = "panda-logo" src="~/images/Logo.png" alt="Panda Restaurant">
                            </a>
                            <a class="list-group-item border-end-0 d-inline-block text-truncate" asp-area="" asp-page="/Orders/Index">
                                <span>
                                    <img class="orders-image" src="~/images/RocketLaunch.png" alt="">Orders
                                </span> 
                            </a>
                            <a class="list-group-item border-end-0 d-inline-block text-truncate" asp-area="" asp-page="/MenuItems/Index">
                                <span>
                                    <img class="menu-image" src="~/images/menu.png" alt="">
                                    Menu Items
                                </span>
                                </a>
                            <a class="list-group-item border-end-0 d-inline-block text-truncate" asp-area="" asp-page="/Customers/Index">
                                <span>
                                    <img class="customers-image" src="~/images/Vector.png" alt="">
                                    Customers
                                </span> 
                             </a>
                            <a class="list-group-item border-end-0 d-inline-block text-truncate" asp-area="" asp-page="/Tables/Index">
                                <span>
                                    <img class="customers-image" src="~/images/CircleHalf.png" alt="">
                                    Tables
                                </span>
                             </a>
                            <partial name="_LoginPartial" />
                        </div>
                    </div>
                </div>
                <main class="col ps-md-2 pt-2">
                    <a href="#" id="sidebar-button" data-bs-target="#sidebar" data-bs-toggle="collapse" class="p-1 text-decoration-none position-fixed">
                        <img class="burger" src="~/images/burger.png" alt="Menu">
                    </a>
                    <div class="row">
                        <div class="col-12">
                            <div class="container">
                                <main role="main" class="pb-3">
                                    @RenderBody()
                                </main>
                            </div>
                        </div>
                    </div>
                </main>
                <footer class="border-top footer text-muted bg-white">
                    <div class="container">
                        &copy; 2022 - PandaRestaurant
                    </div>
                </footer>
            </div>
        </div>
    </header>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>