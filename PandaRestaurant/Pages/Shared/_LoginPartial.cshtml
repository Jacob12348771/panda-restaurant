@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        <a class="list-group-item border-end-0 d-inline-block text-truncate" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
        <form class="form-inline list-group-item border-end-0 d-inline-block text-truncate" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="btn">Logout</button>
        </form>
}
else
{
    <a class="list-group-item border-end-0 d-inline-block text-truncate" asp-area="Identity" asp-page="/Account/Register">Register</a>
    <a class="list-group-item border-end-0 d-inline-block text-truncate" asp-area="Identity" asp-page="/Account/Login">Login</a>
}
</ul>
