@page
@model PandaRestaurant.Pages.Employees.IndexModel

@{
    ViewData["Title"] = "Employees";
}

<h1 class="page-title">Index</h1>

<p>
    <a asp-page="Create" id="create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].EmployeeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].EmployeePosition)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Employee) {
        <tr class="employeee-table-row" id="employee-@item.EmployeeID">
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeePosition)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.EmployeeID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.EmployeeID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.EmployeeID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
