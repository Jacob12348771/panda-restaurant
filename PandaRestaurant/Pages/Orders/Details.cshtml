@page
@model PandaRestaurant.Pages.Orders.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <div class="container">
        <div class="row">
            <div class="col-8 bg-dark bg-opacity-10">
                <hr />
                <div class="row">
                    <div class="col">
                        <div class="rounded-circle circle-sizing">
                        </div>
                        Created
                    </div>
                    <div class="col">
                        <div class="rounded-circle circle-sizing">
                        </div>
                        Preparing
                    </div>
                    <div class="col">
                        <div class="rounded-circle circle-sizing">
                        </div>
                        Ready
                    </div>
                    <div class="col">
                        <div class="rounded-circle circle-sizing">
                        </div>
                        Paid
                    </div>
                </div>
            </div>
            <div class="col bg-dark bg-opacity-50">
                3 of 3
            </div>
        </div>
    </div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderStatus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderDatetime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderDatetime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Table)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Table.TableID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Customer.CustomerID)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Order?.OrderID">Edit</a> |
