@page
@model PandaRestaurant.Pages.Orders.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order ID: @Html.DisplayFor(model => model.Order.OrderID)</h4>
    <hr />
    <div class="container">
        <div class="row">
            <div class="col-8 bg-dark bg-opacity-10 shadow-lg m-2 rounded-3">
                <div class="line">
                    <div class="step active">
                        <span class="circle"> </span> <span class="text">Order Created</span>
                     </div>
                    <div class="step active">
                        <span class="circle"> </span> <span class="text">Order Preparing</span>
                    </div>
                    <div class="step">
                        <span class="circle"> </span> <span class="text">Order Ready</span>
                    </div>
                    <div class="step">
                        <span class="circle"> </span> <span class="text">Order Paid</span> 
                    </div>
                </div>
            </div>
            <div class="col bg-dark bg-opacity-10 shadow-lg m-2 rounded-3">
                Section for table details
            </div>
        </div>
    </div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderStatus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderDatetime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderDatetime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Table)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Table.TableID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Customer.CustomerID)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Order?.OrderID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
